{
  "$schema": "http://json-schema.org/draft-07/schema#", 
  "$id": "schema/condition.schema.json",
  "definitions": {    
    "traumaCondition": {
      "$id": "#traumaCondition",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "trauma"
          ]
        },          
        "investigator": {
          "$ref": "types.schema.json#/definitions/investigator"
        },
        "trauma": {
          "type": "string",
          "enum": ["killed"]
        }
      },
      "required": [
        "type",
        "investigator",
        "trauma"
      ],
      "additionalProperties": false
    },
    "scenarioDataCondition": {
      "$id": "#scenarioDataCondition",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "scenario_data"
          ]
        },
        "scenario_data": {
          "type": "string",
          "enum": [
            "player_count",
            "investigator",
            "any_resigned",
            "resolution"
          ]
        }
      },
      "required": [
        "type",
        "scenario_data"
      ],
      "additionalProperties": false
    },
    "campaignDataCondition": {
      "$id": "#campaignDataCondition",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "campaign_data"
          ]
        },
        "campaign_data": {
          "type": "string",
          "enum": [
            "difficulty",
            "scenario_completed"
          ]
        },
        "scenario": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "campaign_data"
      ],
      "additionalProperties": false
    },
    "cardCondition": {
      "$id": "#cardCondition",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "has_card"
          ]
        },
        "investigator": {
          "$ref": "types.schema.json#/definitions/investigator"

        },
        "card": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "card"
      ],
      "additionalProperties": false
    },
    "campaignLogCondition": {
      "$id": "#campaignLogCondition",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "campaign_log"
          ]
        },
        "section": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "investigator": {
          "$ref": "types.schema.json#/definitions/investigator"
        }
      },
      "required": [
        "type",
        "section"
      ],
      "additionalProperties": false
    },
    "campaignLogOperand": {
      "$id": "#campaignLogOperand",
      "type": "object",
      "properties": {
        "section": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "section"
      ],
      "additionalProperties": false
    },
    "campaignLogMath": {
      "$id": "#campaignLogMath",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "campaign_log_math"
          ]
        },
        "opA": {
          "$ref": "#/definitions/campaignLogOperand"
        },
        "opB": {
          "$ref": "#/definitions/campaignLogOperand"
        },
        "operation": {
          "type": "string",
          "enum": ["compare", "sum"]
        }
      },
      "required": [
        "type",
        "opA",
        "opB",
        "operation"
      ],
      "additionalProperties": false
    },
    "condition": {
      "$id": "#condition",
      "oneOf": [
        {
          "$ref": "#/definitions/campaignLogCondition"
        },
        {
          "$ref": "#/definitions/campaignLogMath"
        },
        {
          "$ref": "#/definitions/cardCondition"
        },
        {
          "$ref": "#/definitions/campaignDataCondition"
        },
        {
          "$ref": "#/definitions/scenarioDataCondition"
        },
        {
          "$ref": "#/definitions/traumaCondition"
        }
      ]
    }
  }
}
