{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/campaign.schema.json",
  "definitions": {
    "campaign": {
      "$id": "#campaign",
      "title": "Campaign",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "position": {
          "type": "integer"
        },
        "campaign_log": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["count", "supplies", "hidden"]
              }
            },
            "required": ["id", "title"],
            "additionalProperties": false
          }
        },
        "scenarios": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "setup": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "step.schema.json#/definitions/step"
          }
        },
        "side_scenario_steps": {
          "type": "array",
          "items": {
            "$ref": "step.schema.json#/definitions/step"
          }
        }
      },
      "required": [
        "id",
        "version",
        "name",
        "position",
        "campaign_log",
        "scenarios",
        "setup",
        "steps"
      ],
      "additionalProperties": false
    }
  }
}
