{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/input.schema.json",
  "definitions": {
    "playScenarioInput": {
      "$id": "#playScenarioInput",
      "title": "PlayScenarioInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "play_scenario"
          ]
        },
        "branches": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/binaryConditionalChoice"
          }
        },
        "campaign_log": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/binaryConditionalChoice"
          }
        },
        "no_resolutions": {
          "type": "boolean"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "receiveCampaignLinkInput": {
      "$id": "#receiveCampaignLinkInput",
      "title": "ReceiveCampaignLinkInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "receive_campaign_link"
          ]
        },
        "linked_prompt": {
          "type": "string"
        },
        "manual_prompt": {
          "type": "string"
        },
        "flip_campaign": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/choice"
          }
        }
      },
      "required": ["type", "id", "choices"],
      "additionalProperties": false
    },
    "sendCampaignLinkInput": {
      "$id": "#sendCampaignLinkInput",
      "title": "SendCampaignLinkInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "send_campaign_link"
          ]
        },
        "id": {
          "type": "string"
        },
        "decision": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        }
      },
      "required": ["type", "id", "decision"],
      "additionalProperties": false
    },
    "textBoxInput": {
      "$id": "#textBoxInput",
      "title": "TextBoxInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "text_box"
          ]
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "effect.schema.json#/definitions/freeformCampaignLogEffect"
          }
        }
      },
      "required": ["type", "effects"],
      "additionalProperties": false
    },
    "scenarioInvestigatorsInput": {
      "$id": "#scenarioInvestigatorsInput",
      "title": "ScenarioInvestigatorsInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "scenario_investigators"
          ]
        },
        "choose_none_steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "investigatorChoiceWithSuppliesInput": {
      "$id": "#investigatorChoiceWithSuppliesInput",
      "title": "InvestigatorChoiceWithSuppliesInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "investigator_choice_supplies"
          ]
        },
        "section": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "investigator": {
          "type": "string",
          "enum": [
            "choice"
          ]
        },
        "positiveChoice": {
          "$ref": "types.schema.json#/definitions/choice"
        },
        "negativeChoice": {
          "$ref": "types.schema.json#/definitions/choice"
        }
      },
      "required": [
        "type",
        "section",
        "id",
        "prompt",
        "investigator",
        "positiveChoice",
        "negativeChoice"
      ],
      "additionalProperties": false
    },
    "randomLocationInput": {
      "$id": "#randomLocationInput",
      "title": "RandomLocationInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "random_location"
          ]
        },
        "cards": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "multiple": {
          "type": "boolean"
        }
      },
      "required": ["type", "cards"],
      "additionalProperties": false
    },
    "investigatorChoiceInput": {
      "$id": "#investigatorChoiceInput",
      "title": "InvestigatorChoiceInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "investigator_choice"
          ]
        },
        "source": {
          "type": "string",
          "enum": [
            "campaign",
            "scenario"
          ]
        },
        "investigator": {
          "type": "string",
          "enum": [
            "all",
            "choice",
            "any",
            "resigned"
          ]
        },
        "special_mode": {
          "type": "string",
          "enum": [
            "detailed",
            "sequential"
          ]
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/investigatorConditionalChoice"
          }
        }
      },
      "required": ["type", "choices", "investigator", "source"],
      "additionalProperties": false
    },
    "suppliesInput": {
      "$id": "#suppliesInput",
      "title": "SuppliesInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "supplies"
          ]
        },
        "points": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "supplies": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/supply"
          }
        },
        "section": {
          "type": "string"
        },
        "special_xp": {
          "$ref": "types.schema.json#/definitions/specialXp"
        }
      },
      "required": ["type", "points", "supplies", "section"],
      "additionalProperties": false
    },
    "useSuppliesAllInput": {
      "$id": "#useSuppliesAllInput",
      "title": "UseSuppliesAllInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "use_supplies"
          ]
        },
        "section": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "investigator": {
          "type": "string",
          "enum": [
            "all"
          ]
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "option.schema.json#/definitions/boolOption"
          }
        }
      },
      "required": ["type", "section", "id", "prompt", "name", "investigator", "choices"],
      "additionalProperties": false
    },
    "useSuppliesChoiceInput": {
      "$id": "#useSuppliesChoiceInput",
      "title": "UseSuppliesChoiceInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "use_supplies"
          ]
        },
        "section": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "investigator": {
          "type": "string",
          "enum": [
            "choice"
          ]
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "option.schema.json#/definitions/boolOption"
          }
        }
      },
      "required": [
        "type",
        "section",
        "id",
        "name",
        "prompt",
        "investigator",
        "choices",
        "min",
        "max"
      ],
      "additionalProperties": false
    },
    "useSuppliesInput": {
      "$id": "#useSuppliesInput",
      "title": "UseSuppliesInput",
      "oneOf": [
        {
          "$ref": "#/definitions/useSuppliesChoiceInput"
        },
        {
          "$ref": "#/definitions/useSuppliesAllInput"
        }
      ]
    },
    "cardChoiceInput": {
      "$id": "#cardChoiceInput",
      "title": "CardChoiceInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "card_choice"
          ]
        },
        "include_counts": {
          "type": "boolean"
        },
        "query": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/cardQuery"
          }
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/choice"
          }
        },
        "campaign_log_condition": {
          "$ref": "condition.schema.json#/definitions/campaignLogCardsCondition"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        }
      },
      "required": ["type", "query", "choices"],
      "additionalProperties": false
    },
    "chooseOneInput": {
      "$id": "#chooseOneInput",
      "title": "ChooseOneInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "choose_one"
          ]
        },
        "style": {
          "type": "string",
          "enum": [
            "picker"
          ]
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/binaryConditionalChoice"
          }
        }
      },
      "required": ["type", "choices"],
      "additionalProperties": false
    },
    "checklistInput": {
      "$id": "#checklistInput",
      "title": "ChecklistInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "checklist"
          ]
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/binaryConditionalChoice"
          }
        },
        "text": {
          "type": "string"
        }
      },
      "required": ["type", "choices", "text"],
      "additionalProperties": false
    },
    "investigatorCounterInput": {
      "$id": "#investigatorCounterInput",
      "title": "InvestigatorCounterInput",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "investigator_counter"
          ]
        },
        "text": {
          "type": "string"
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "effect.schema.json#/definitions/effect"
          }
        },
        "investigator_max": {
          "type": "string",
          "enum": [
            "physical_trauma",
            "mental_trauma"
          ]
        },
        "max": {
          "type": "number"
        },
        "show_special_xp": {
          "type": "string"
        }
      },
      "required": ["type", "text", "effects"],
      "additionalProperties": false
    },
    "saveDecksInput": {
      "$id": "#saveDecksInput",
