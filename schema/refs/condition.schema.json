        "options": {
          "type": "array",
          "items": {
            "$ref": "option.schema.json#/definitions/stepsOption"
          }
        }
      },
      "required": [
        "type",
        "investigator",
        "trauma",
        "options"
      ],
      "additionalProperties": false
    },
