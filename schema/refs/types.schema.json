{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/types.schema.json",
  "definitions": {
    "investigator": {
      "$id": "#investigator",
      "title": "InvestigatorSelector",
      "type": "string",
      "enum": [
        "lead_investigator",
        "all",
        "any",
        "choice",
        "defeated",
        "not_resigned",
        "$input_value"
      ]
    },
    "investigatorStatus": {
      "$id": "#investigatorStatus",
      "title": "InvestigatorStatus",
      "type": "string",
      "enum": [
        "alive",
        "resigned",
        "physical",
        "mental",
        "eliminated"
      ]
    },
    "scenarioStatus": {
      "$id": "#scenarioStatus",
      "title": "ScenarioStatus",
      "type": "string",
      "enum": [
        "not_started",
        "skipped",
        "started",
        "resolution",
        "completed",
        "unlocked"
      ]
    },
    "difficulty": {
      "$id": "#difficulty",
      "title": "Difficulty",
      "type": "string",
      "enum": [
        "easy",
        "standard",
        "hard",
        "expert"
      ]
    },
    "chaosToken": {
      "$id": "#chaosToken",
      "title": "ChaosToken",
      "type": "string",
      "enum": [
        "+1",
        "0",
        "-1",
        "-2",
        "-3",
        "-4",
        "-5",
        "-6",
        "-7",
        "-8",
        "skull",
        "cultist",
        "tablet",
        "elder_thing",
        "elder_sign",
        "auto_fail"
      ]
    },
    "cardCodeList": {
      "$id": "#cardCodeList",
      "title": "CardCodeList",
      "type": "object",
      "properties": {
        "code": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["code"],
      "additionalProperties": false
    },
    "cardSearchQuery": {
      "$id": "#cardSearchQuery",
      "title": "CardSearchQuery",
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "enum": [
            "scenario",
            "deck"
          ]
        },
        "trait": {
          "type": "string"
        },
        "unique": {
          "type": "boolean"
        },
        "vengeance": {
          "type": "boolean"
        },
        "code": {
          "type": "null"
        }
      },
      "required": ["source"],
      "additionalProperties": false
    },
    "cardQuery": {
      "$id": "#cardQuery",
      "title": "CardQuery",
      "oneOf": [
        {
          "$ref": "#/definitions/cardSearchQuery"
        },
        {
          "$ref": "#/definitions/cardCodeList"
        }
      ]
    },
    "stepsChoice": {
      "$id": "#stepsChoice",
      "title": "StepsChoice",
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "flavor": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "effects": {
          "type": "null"
        }
      },
      "required": ["steps"],
      "additionalProperties": false
    },
    "effectsChoice": {
      "$id": "#effectsChoice",
      "title": "EffectsChoice",
      "type": "object",
      "properties": {
        "flavor": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "effect.schema.json#/definitions/effect"
          }
        },
        "steps": {
          "type": "null"
        }
      },
      "required": ["effects", "text"],
      "additionalProperties": false
    },
    "simpleEffectsChoice": {
      "$id": "#simpleEffectsChoice",
      "title": "SimpleEffectsChoice",
      "type": "object",
      "properties": {
        "flavor": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "effects": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "effect.schema.json#/definitions/campaignLogCardsEffect"
              },
              {
                "$ref": "effect.schema.json#/definitions/removeCardEffect"
              }
            ]
          }
        },
        "steps": {
          "type": "null"
        }
      },
      "required": ["text", "effects"],
      "additionalProperties": false
    },
    "choice": {
      "$id": "#choice",
      "title": "Choice",
      "oneOf": [
        {
          "$ref": "#/definitions/stepsChoice"
        },
        {
          "$ref": "#/definitions/effectsChoice"
        }
      ]
    },
    "supply": {
      "$id": "#supply",
      "title": "Supply",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "cost": {
          "type": "number"
        },
        "multiple": {
          "type": "boolean"
        }
      },
      "required": ["id", "name", "description", "cost"],
      "additionalProperties": false
    },
    "bulletType": {
      "$id": "#bulletType",
      "title": "BulletType",
      "type": "string",
      "enum": [
        "none",
        "small"
      ]
    }

  }
}
