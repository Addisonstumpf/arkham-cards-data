{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/types.schema.json",
  "definitions": {
    "achievement": {
      "$id": "#achievement",
      "title": "Achievement",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["binary", "count", "list"]
        },
        "max": {
          "type": "number"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["id", "text"],
            "additionalProperties": false
          }
        }
      },
      "required": ["id", "title", "text", "type"],
      "additionalProperties": false
    },
    "narration": {
      "$id": "#narration",
      "title": "Narration",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "lang": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["id", "name"],
      "additionalProperties": false
    },
    "locationConnector": {
      "$id": "#locationConnector",
      "title": "LocationConnector",
      "type": "string",
      "enum": [
        "purple_moon",
        "blue_triangle",
        "red_square",
        "orange_heart",
        "green_diamond"
      ]
    },
    "investigator": {
      "$id": "#investigator",
      "title": "InvestigatorSelector",
      "type": "string",
      "enum": [
        "lead_investigator",
        "all",
        "any",
        "choice",
        "defeated",
        "not_resigned",
        "any_resigned",
        "$input_value",
        "$fixed_investigator"
      ]
    },
    "border": {
      "$id": "#border",
      "title": "Border",
      "type": "string",
      "enum": [
        "top",
        "bottom",
        "both"
      ]
    },
    "investigatorStatus": {
      "$id": "#investigatorStatus",
      "title": "InvestigatorStatus",
      "type": "string",
      "enum": [
        "alive",
        "resigned",
        "physical",
        "mental",
        "eliminated"
      ]
    },
    "scenarioStatus": {
      "$id": "#scenarioStatus",
      "title": "ScenarioStatus",
      "type": "string",
      "enum": [
        "not_started",
        "skipped",
        "started",
        "resolution",
        "completed",
        "unlocked"
      ]
    },
    "difficulty": {
      "$id": "#difficulty",
      "title": "Difficulty",
      "type": "string",
      "enum": [
        "easy",
        "standard",
        "hard",
        "expert"
      ]
    },
    "specialXp": {
      "$id": "#specialXp",
      "title": "SpecialXp",
      "type": "string",
      "enum": [
        "resupply_points",
        "supply_points",
        "unspect_xp"
      ]
    },
    "chaosToken": {
      "$id": "#chaosToken",
      "title": "ChaosToken",
      "type": "string",
      "enum": [
        "+1",
        "0",
        "-1",
        "-2",
        "-3",
        "-4",
        "-5",
        "-6",
        "-7",
        "-8",
        "skull",
        "cultist",
        "tablet",
        "elder_thing",
        "elder_sign",
        "auto_fail"
      ]
    },
    "customData": {
      "$id": "#customData",
      "title": "CustomData",
      "type": "object",
      "properties": {
        "creator": {
          "type": "string"
        },
        "download_link": {
          "type": "string"
        }
      },
      "required": [
        "creator",
        "download_link"
      ],
      "additionalProperties": false
    },
    "cardCodeList": {
      "$id": "#cardCodeList",
      "title": "CardCodeList",
      "type": "object",
      "properties": {
        "code": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "source": {
          "type": "null"
        }
      },
      "required": ["code"],
      "additionalProperties": false
    },
    "cardSearchQuery": {
      "$id": "#cardSearchQuery",
      "title": "CardSearchQuery",
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "enum": [
            "scenario",
            "deck"
          ]
        },
        "trait": {
          "type": "string"
        },
        "unique": {
          "type": "boolean"
        },
        "vengeance": {
          "type": "boolean"
        },
        "exclude_code": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "code": {
          "type": "null"
        }
      },
      "required": ["source"],
      "additionalProperties": false
    },
    "cardQuery": {
      "$id": "#cardQuery",
      "title": "CardQuery",
      "oneOf": [
        {
          "$ref": "#/definitions/cardSearchQuery"
        },
        {
          "$ref": "#/definitions/cardCodeList"
        }
      ]
    },
    "choice": {
      "$id": "#choice",
      "title": "Choice",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "feminine_text": {
          "type": "string"
        },
        "masculine_text": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "border": {
          "type": "boolean"
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "effect.schema.json#/definitions/effect"
          }
        }
      },
      "required": ["id", "text"],
      "additionalProperties": false
    },
    "binaryConditionalChoice": {
      "$id": "#binaryConditionalChoice",
      "title": "BinaryConditionalChoice",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "condition": {
          "$ref": "condition.schema.json#/definitions/binaryChoiceCondition"
        },
        "repeatable": {
          "type": "boolean"
        },
        "border": {
          "type": "boolean"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "effect.schema.json#/definitions/effect"
          }
        }
      },
      "required": ["id", "text"],
      "additionalProperties": false
    },
    "investigatorConditionalChoice": {
      "$id": "#investigatorConditionalChoice",
      "title": "InvestigatorConditionalChoice",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "condition": {
          "$ref": "condition.schema.json#/definitions/investigatorChoiceCondition"
        },
        "border": {
          "type": "boolean"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "effect.schema.json#/definitions/effect"
          }
        }
      },
      "required": ["id", "text"],
      "additionalProperties": false
    },
    "tableCell": {
      "$id": "#tableCell",
      "title": "TableCell",
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "size": {
          "type": "number"
        }
      },
      "required": ["text", "size"],
      "additionalProperties": false
    },
    "tableRow": {
      "$id": "#tableRow",
      "title": "TableRow",
      "type": "object",
      "properties": {
        "cells": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tableCell"
          }
        }
      },
      "required": ["cells"],
      "additionalProperties": false
    },
    "supply": {
      "$id": "#supply",
      "title": "Supply",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "cost": {
          "type": "number"
        },
        "multiple": {
          "type": "boolean"
        }
      },
      "required": ["id", "name", "description", "cost"],
      "additionalProperties": false
    },
    "bulletType": {
      "$id": "#bulletType",
      "title": "BulletType",
      "type": "string",
      "enum": [
        "none",
        "small"
      ]
    }
  }
}
