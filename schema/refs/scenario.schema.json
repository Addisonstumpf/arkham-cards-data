{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/scenario.schema.json",
  "definitions": {
    "scenario": {
      "$id": "#scenario",
      "title": "Scenario",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "scenarioName": {
          "type": "string"
        },
        "setup": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resolutions": {
          "type": "array",
          "items": {
            "$ref": "resolution.schema.json#/definitions/resolution"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "step.schema.json#/definitions/step"
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "interlude",
            "epilogue"
          ]
        }
      },
      "required": [
        "id",
        "scenarioName",
        "setup",
        "steps"
      ],
      "additionalProperties": false
    }
  }
}
