    "customCard": {
      "title": "CustomCard",
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "subname": {
          "type": "string"
        },
        "traits": {
          "type": "string"
        },
        "type_code": {
          "type": "string"
        },
        "subtype_code": {
          "type": "string"
        },
        "exile": {
          "type": "boolean"
        },
        "permanent": {
          "type": "boolean"
        },
        "text": {
          "type": "string"
        },
        "is_unique": {
          "type": "boolean"
        },
        "encounter_code": {
          "type": "string"
        },
        "cost": {
          "type": "number"
        },
        "flavor": {
          "type": "string"
        },
        "slot": {
          "type": "string"
        },
        "health": {
          "type": "number"
        },
        "sanity": {
          "type": "number"
        },
        "skill_combat": {
          "type": "number"
        },
        "skill_intellect": {
          "type": "number"
        },
        "skill_agility": {
          "type": "number"
        },
        "skill_willpower": {
          "type": "number"
        },
        "skill_wild": {
          "type": "number"
        },
        "deck_limit": {
          "type": "number"
        },
        "quantity": {
          "type": "number"
        },
        "pack_code": {
          "type": "string"
