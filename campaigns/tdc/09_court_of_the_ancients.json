{
  "id": "court_of_the_ancients",
  "scenario_name": "The Court of the Ancients",
  "full_name": "Scenario: The Court of the Ancients",
  "header": "Scenario",
  "setup": [
    "check_direction",
    "check_west",
    "check_plumbing_the_depths",
    "encounter_sets",
    "setup_locations",
    "choose_location_layout",
