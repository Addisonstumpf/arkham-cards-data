{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/scenario.schema.json",
  "type": "object",
  "properties": {
    "scenarioName": {
      "type": "string"
    },
    "setup": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resolutions": {
      "type": "array",
      "items": {
        "$ref": "schema/resolution.schema.json#/definitions/resolution"
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "$ref": "schema/step.schema.json#/definitions/step"
      }
    },
    "interlude": {
      "type": "boolean"
    }
  },
  "required": [
    "scenarioName",
    "setup",
    "steps"
  ],
  "additionalProperties": false
}